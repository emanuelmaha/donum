{
    "title": "hero schema",
    "description": "describes a simple hero",
    "version": 0,
    "disableKeyCompression": true,
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "primary": true,
            "default": ""
        },
        "color": {
            "type": "string",
            "default": ""
        },
        "maxHP": {
          "type": "number",
          "min": 0,
          "max": 1000
        },
        "hp": {
            "type": "number",
            "min": 0,
            "max": 100,
            "default": 100
        },
        "team": {
            "description": "color of the team this hero belongs to",
            "type": "string"
        },
        "skills": {
            "type": "array",
            "maxItems": 5,
            "uniqueItems": true,
            "item": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "damage": {
                        "type": "number"
                    }
                }
            }
        }
    },
    "required": ["color", "maxHP"]
}
